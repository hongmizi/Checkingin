<!DOCTYPE html>
<html>
  <head>
    <title>Checkingin</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "rails.validations"%>
    <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <%= csrf_meta_tags %>
  </head>
 <body data-spy="scroll" data-target=".bs-docs-sidebar">


    <!-- Navbar  ================================================== -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">主页</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to  "我的项目", user_path(current_user.id) %>
                </li>
                <li class="">
                  <%= link_to "增加新项目", new_project_path %>
                </li>
                <li class="">
                  <%= link_to "我的打卡情况", checkins_path%>
                </li>

                <li class="">
                  <%= link_to  "退出", destroy_user_session_path,:method =>:delete %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to "登录", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <br/><br/>
    <!-- Subhead ================================================== -->
    <% if flash[:alert].present? %>
      <font color=red> <%= flash[:alert] %> </font>
    <% end %>
    <% if flash[:notice].present? %>
      <font color=green> <%= flash[:notice] %> </font>
    <% end %>
    <%= yield %>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
