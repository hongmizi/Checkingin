<!DOCTYPE html>
<html>
  <head>
    <title>Checkingin</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "rails.validations"%>
    <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap.min.css" rel="stylesheet">
    <%= csrf_meta_tags %>
<style type="text/css">
  body {
    background-color: #f5f5f5;
  }
</style>
  </head>
 <body data-spy="scroll" data-target=".bs-docs-sidebar">
    <!-- Navbar  ================================================== -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">主页</a>
          <div class="nav-collapse collapse">
            <% unless user_signed_in? %>
            <p class="navbar-text pull-right">
               <%= link_to "登录", new_user_session_path %> &nbsp;
               <%= link_to "注册", new_user_registration_path %>
             </p>
           <% else%>
             <p class="navbar-text pull-right">
               <%= link_to "设置", profile_path %>
               <%= link_to  "退出", destroy_user_session_path,:method =>:delete %>
             </p>
           <% end %>

            <ul class="nav">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to  "我的项目", user_path(current_user.id) %>
                </li>
                <li class="">
                  <%= link_to "增加新项目", new_project_path %>
                </li>
                <li class="">
                  <%= link_to "我的打卡情况", checkins_path%>
                <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <br/><br/>
    <!-- Subhead ================================================== -->
    <!-- alert and notice begin -->
    <% if flash[:alert].present? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4>错误!</h4>    <strong><%= flash[:alert]%></strong>
      </div>
    <% end %>
    <% if flash[:notice].present? %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4>成功!</h4>    <strong><%= flash[:notice]%></strong>
      </div>
    <% end %>
    <!-- alert and notice end-->
    <%= yield %>
    
    <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
  </body>
</html>
