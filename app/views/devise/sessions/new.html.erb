
<style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

  .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }

</style>

<div class="container">
  <h2 class="form-signin-heading">登录</h2>
  <%= form_for(resource, :as => resource_name, class:"form-signin", :url => session_path(resource_name)) do |f| %>
    <div> <%= f.email_field :email, placeholder:"Email 地址..", :autofocus => true %>
  </div>
    <%= f.password_field :password, placeholder:"密码" %>
  <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.check_box :remember_me %> &nbsp; 记住我
    </div>
  <% end %>
  <br />
  <div><%= f.submit "登录", class:"btn btn-large" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
